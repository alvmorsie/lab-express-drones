<div class="container">
    <h2>Available drones</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card">
                <div class="card-body">


                    {{#each drones}}
                    <h5 class="card-title">Name: {{name}}</h5>
                    <p class="card-text">Propellers: {{propellers}}</p>
                    <p class="card-text">MaxSpeed: {{maxSpeed}}</p>
                    <div class="card-text">
                        <a href="/drones/{{_id}}/edit" class="btn btn-dark btn-sm">Edit</a>
                        <form action="/drones/{{_id}}/delete" method="POST">
                            <input type="submit" value="Delete" class="btn btn-danger btn-sm">
                        </form>
                    </div>

                    {{/each}}
                </div>
            </div>


            <a href='/drones/create-form' class="btn btn-dark">Add a new drone</a>

        </div>
    </div>
</div>