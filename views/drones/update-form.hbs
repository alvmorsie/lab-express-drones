<h2>Update the drone</h2>

<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Update the drone:{{name}}</h1>
            <hr>

            <form action="/drones/:id/edit" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="number" class="form-control" id="description" name="propellers" value="{{propellers}}">
                </div>

                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">maxSpeed</label>
                    <input type="number" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
                </div>


                <input type="hidden" name="dron_id" value="{{id}}">

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Guardar edici√≥n</button>
                </div>

            </form>
        </div>
    </div>
</div>